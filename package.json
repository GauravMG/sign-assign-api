{
	"name": "sign-assign-api",
	"version": "1.0.0",
	"description": "",
	"main": "app.js",
	"scripts": {
		"postinstall": "husky install",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable",
		"prisma:format": "npx prisma format",
		"prisma:generate": "npx prisma generate",
		"prisma:migrate:dev": "npx prisma migrate dev",
		"prisma:migrate:deploy": "npx prisma migrate deploy",
		"start": "node dist/app.js --build-dir=dist",
		"dev": "nodemon src/app.ts --build-dir=src",
		"build": "tsc",
		"test": "jest",
		"lint": "eslint . --fix",
		"prettier:list": "prettier \"{src,test}/**/*.{ts,js}\" --list-different",
		"prettier:fix": "prettier \"{src,test}/**/*.{ts,js}\" --write",
		"format": "yarn prettier:fix && yarn lint"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn prettier:list"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint . --fix",
			"prettier --check"
		]
	},
	"author": "",
	"license": "ISC",
