generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ApprovalStatus {
  pending
  approved
  rejected
}

enum MeasuringUnit {
  ft
  in
}

enum MediaType {
  image
  video
}

enum TicketStatus {
  open
  pending
  closed
}

enum UserActionType {
  like
  comment
  share
}

enum AttributeType {
  text
  number
  boolean
  select
  multi_select
  dimension
}

enum NotificationServices {
  mailjet
  google
  tiara
  twilio
  outlook
}

enum NotificationTypes {
  email
  sms
}

enum OrderStatus {
  pending
  delivered
}

enum PaymentStatus {
  pending
  paid
  failed
  refunded
}

enum MessageSender {
  user
  bot
}

enum TemplateTagReference {
  product_category
  product_sub_category
  product
}

enum DiscountType {
  amount
  percentage
}

enum CouponQuantityType {
  limited
  unlimited
}

enum ChargeType {
  flat
  percentage
}

model Role {
  roleId         Int       @id @default(autoincrement())
  name           String    @db.VarChar(100)
  permissionJSON String?
  status         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
  createdBy      User?     @relation("RoleCreatedBy", fields: [createdById], references: [userId], onDelete: SetNull)
  updatedBy      User?     @relation("RoleUpdatedBy", fields: [updatedById], references: [userId], onDelete: SetNull)
  deletedBy      User?     @relation("RoleDeletedBy", fields: [deletedById], references: [userId], onDelete: SetNull)

  createdById Int?
  updatedById Int?
  deletedById Int?

  users User[]
}

model User {
  userId       Int       @id @default(autoincrement())
  role         Role      @relation(fields: [roleId], references: [roleId], onDelete: Cascade)
  roleId       Int
  firstName    String?   @db.VarChar(100)
  lastName     String?   @db.VarChar(100)
  email        String?   @unique @db.VarChar(100)
  mobile       String?   @db.VarChar(100)
  password     String?   @db.VarChar(100)
  gender       String?   @db.VarChar(100)
  pinCode      String?   @db.VarChar(30)
  address      String?
  city         String?   @db.VarChar(100)
  state        String?   @db.VarChar(100)
  country      String?   @db.VarChar(100)
  profilePhoto String?
  isActive     Boolean   @default(true)
  status       Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  deletedAt    DateTime?
