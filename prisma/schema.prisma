  productFAQUpdatedBy           ProductFAQ[]           @relation("ProductFAQUpdatedBy")
  productFAQDeletedBy           ProductFAQ[]           @relation("ProductFAQDeletedBy")
  productFAQUserActionCreatedBy ProductFAQUserAction[] @relation("ProductFAQUserActionCreatedBy")
  productFAQUserActionUpdatedBy ProductFAQUserAction[] @relation("ProductFAQUserActionUpdatedBy")
  productFAQUserActionDeletedBy ProductFAQUserAction[] @relation("ProductFAQUserActionDeletedBy")

  productReviewCreatedBy           ProductReview[]           @relation("ProductReviewCreatedBy")
  productReviewUpdatedBy           ProductReview[]           @relation("ProductReviewUpdatedBy")
  productReviewDeletedBy           ProductReview[]           @relation("ProductReviewDeletedBy")
  productReviewMediaCreatedBy      ProductReviewMedia[]      @relation("ProductReviewMediaCreatedBy")
  productReviewMediaUpdatedBy      ProductReviewMedia[]      @relation("ProductReviewMediaUpdatedBy")
  productReviewMediaDeletedBy      ProductReviewMedia[]      @relation("ProductReviewMediaDeletedBy")
  productReviewUserActionCreatedBy ProductReviewUserAction[] @relation("ProductReviewUserActionCreatedBy")
  productReviewUserActionUpdatedBy ProductReviewUserAction[] @relation("ProductReviewUserActionUpdatedBy")
  productReviewUserActionDeletedBy ProductReviewUserAction[] @relation("ProductReviewUserActionDeletedBy")

  attributeCreatedBy Attribute[] @relation("AttributeCreatedBy")
  attributeUpdatedBy Attribute[] @relation("AttributeUpdatedBy")
  attributeDeletedBy Attribute[] @relation("AttributeDeletedBy")

  variantCreatedBy          Variant[]          @relation("VariantCreatedBy")
  variantUpdatedBy          Variant[]          @relation("VariantUpdatedBy")
  variantDeletedBy          Variant[]          @relation("VariantDeletedBy")
  variantMediaCreatedBy     VariantMedia[]     @relation("VariantMediaCreatedBy")
  variantMediaUpdatedBy     VariantMedia[]     @relation("VariantMediaUpdatedBy")
  variantMediaDeletedBy     VariantMedia[]     @relation("VariantMediaDeletedBy")
  variantAttributeCreatedBy VariantAttribute[] @relation("VariantAttributeCreatedBy")
  variantAttributeUpdatedBy VariantAttribute[] @relation("VariantAttributeUpdatedBy")
  variantAttributeDeletedBy VariantAttribute[] @relation("VariantAttributeDeletedBy")

  userAddressCreatedBy UserAddress[] @relation("UserAddressCreatedBy")
  userAddressUpdatedBy UserAddress[] @relation("UserAddressUpdatedBy")
  userAddressDeletedBy UserAddress[] @relation("UserAddressDeletedBy")

  productBulkDiscountCreatedBy ProductBulkDiscount[] @relation("ProductBulkDiscountCreatedBy")
  productBulkDiscountUpdatedBy ProductBulkDiscount[] @relation("ProductBulkDiscountUpdatedBy")
  productBulkDiscountDeletedBy ProductBulkDiscount[] @relation("ProductBulkDiscountDeletedBy")

  productRushHourRateCreatedBy ProductRushHourRate[] @relation("ProductRushHourRateCreatedBy")
  productRushHourRateUpdatedBy ProductRushHourRate[] @relation("ProductRushHourRateUpdatedBy")
  productRushHourRateDeletedBy ProductRushHourRate[] @relation("ProductRushHourRateDeletedBy")

  blogCreatedBy      Blog[]      @relation("BlogCreatedBy")
  blogUpdatedBy      Blog[]      @relation("BlogUpdatedBy")
  blogDeletedBy      Blog[]      @relation("BlogDeletedBy")
  blogMediaCreatedBy BlogMedia[] @relation("BlogMediaCreatedBy")
  blogMediaUpdatedBy BlogMedia[] @relation("BlogMediaUpdatedBy")
  blogMediaDeletedBy BlogMedia[] @relation("BlogMediaDeletedBy")

  notificationServiceCreatedBy NotificationService[] @relation("NotificationServiceCreatedBy")
  notificationServiceUpdatedBy NotificationService[] @relation("NotificationServiceUpdatedBy")
  notificationServiceDeletedBy NotificationService[] @relation("NotificationServiceDeletedBy")

  businessClientCreatedBy BusinessClient[] @relation("BusinessClientCreatedBy")
  businessClientUpdatedBy BusinessClient[] @relation("BusinessClientUpdatedBy")
  businessClientDeletedBy BusinessClient[] @relation("BusinessClientDeletedBy")

  userDiscountCreatedBy UserDiscount[] @relation("UserDiscountCreatedBy")
  userDiscountUpdatedBy UserDiscount[] @relation("UserDiscountUpdatedBy")
  userDiscountDeletedBy UserDiscount[] @relation("UserDiscountDeletedBy")

  orderCreatedBy              Order[]              @relation("OrderCreatedBy")
  orderUpdatedBy              Order[]              @relation("OrderUpdatedBy")
  orderDeletedBy              Order[]              @relation("OrderDeletedBy")
  orderProductCreatedBy       OrderProduct[]       @relation("OrderProductCreatedBy")
  orderProductUpdatedBy       OrderProduct[]       @relation("OrderProductUpdatedBy")
  orderProductDeletedBy       OrderProduct[]       @relation("OrderProductDeletedBy")
  orderProductDesignCreatedBy OrderProductDesign[] @relation("OrderProductDesignCreatedBy")
  orderProductDesignUpdatedBy OrderProductDesign[] @relation("OrderProductDesignUpdatedBy")
  orderProductDesignDeletedBy OrderProductDesign[] @relation("OrderProductDesignDeletedBy")
  transactionCreatedBy        Transaction[]        @relation("TransactionCreatedBy")
  transactionUpdatedBy        Transaction[]        @relation("TransactionUpdatedBy")
  transactionDeletedBy        Transaction[]        @relation("TransactionDeletedBy")

  orderStaffMappingCreatedBy OrderStaffMapping[] @relation("OrderStaffMappingCreatedBy")
  orderStaffMappingUpdatedBy OrderStaffMapping[] @relation("OrderStaffMappingUpdatedBy")
  orderStaffMappingDeletedBy OrderStaffMapping[] @relation("OrderStaffMappingDeletedBy")
  orderStaffTaskCreatedBy    OrderStaffTask[]    @relation("OrderStaffTaskCreatedBy")
  orderStaffTaskUpdatedBy    OrderStaffTask[]    @relation("OrderStaffTaskUpdatedBy")
  orderStaffTaskDeletedBy    OrderStaffTask[]    @relation("OrderStaffTaskDeletedBy")

  templateCreatedBy    Template[]    @relation("TemplateCreatedBy")
  templateUpdatedBy    Template[]    @relation("TemplateUpdatedBy")
  templateDeletedBy    Template[]    @relation("TemplateDeletedBy")
  templateTagCreatedBy TemplateTag[] @relation("TemplateTagCreatedBy")
  templateTagUpdatedBy TemplateTag[] @relation("TemplateTagUpdatedBy")
  templateTagDeletedBy TemplateTag[] @relation("TemplateTagDeletedBy")

  couponCreatedBy Coupon[] @relation("CouponCreatedBy")
  couponUpdatedBy Coupon[] @relation("CouponUpdatedBy")
  couponDeletedBy Coupon[] @relation("CouponDeletedBy")

  rushHourRateCreatedBy RushHourRate[] @relation("RushHourRateCreatedBy")
  rushHourRateUpdatedBy RushHourRate[] @relation("RushHourRateUpdatedBy")
  rushHourRateDeletedBy RushHourRate[] @relation("RushHourRateDeletedBy")
}

model Verification {
  verificationId   Int       @id @default(autoincrement())
  userId           Int
  user             User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  verificationType String
  hash             String?
  status           Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime?
  deletedAt        DateTime?
  createdBy        User?     @relation("VerificationCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy        User?     @relation("VerificationUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy        User?     @relation("VerificationDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model LoginHistory {
  loginHistoryId Int       @id @default(autoincrement())
  userId         Int
  user           User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  deviceType     String    @db.VarChar(50)
  deviceId       String?
  jwtToken       String
  fcmToken       String?
  status         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
  createdBy      User?     @relation("LoginHistoryCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy      User?     @relation("LoginHistoryUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy      User?     @relation("LoginHistoryDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model Business {
  businessId          Int       @id @default(autoincrement())
  name                String?
  type                String?
  yearOfIncorporation String?
  pinCode             String?   @db.VarChar(30)
  address             String?
  city                String?   @db.VarChar(100)
  state               String?   @db.VarChar(100)
  country             String?   @db.VarChar(100)
  webUrl              String?
  status              Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime?
  deletedAt           DateTime?
  createdBy           User?     @relation("BusinessCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy           User?     @relation("BusinessUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy           User?     @relation("BusinessDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  businessUserMappings BusinessUserMapping[]
  businessClient       BusinessClient[]

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model BusinessUserMapping {
  businessUserMappingId Int       @id @default(autoincrement())
  businessId            Int?
  userId                Int?
  business              Business? @relation(fields: [businessId], references: [businessId], onDelete: Cascade)
  user                  User?     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  status                Boolean   @default(true)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime?
  deletedAt             DateTime?
  createdBy             User?     @relation("BusinessUserMappingCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy             User?     @relation("BusinessUserMappingUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy             User?     @relation("BusinessUserMappingDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  @@unique([businessId, userId]) // Enforcing unique mapping between business and user
}

model UserAddress {
  userAddressId            Int       @id @default(autoincrement())
  userId                   Int
  firstName                String
  lastName                 String
  companyName              String?
  phoneNumber              String
  streetAddress            String
  postal                   String
  city                     String
  state                    String
  country                  String
  isDefaultBillingAddress  Boolean   @default(true)
  isDefaultShippingAddress Boolean   @default(true)
  status                   Boolean   @default(true)
  createdAt                DateTime  @default(now())
  updatedAt                DateTime?
  deletedAt                DateTime?
  createdBy                User?     @relation("UserAddressCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy                User?     @relation("UserAddressUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy                User?     @relation("UserAddressDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  users  User    @relation(fields: [userId], references: [userId], onDelete: Cascade)
  orders Order[]
}

model UserDiscount {
  userDiscountId     Int       @id @default(autoincrement())
  userId             Int
  user               User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  discountPercentage Float
  status             Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime?
  deletedAt          DateTime?
  createdBy          User?     @relation("UserDiscountCreatedBy", fields: [createdById], references: [userId], onDelete: SetNull)
  updatedBy          User?     @relation("UserDiscountUpdatedBy", fields: [updatedById], references: [userId], onDelete: SetNull)
  deletedBy          User?     @relation("UserDiscountDeletedBy", fields: [deletedById], references: [userId], onDelete: SetNull)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model BusinessClient {
  businessClientId Int       @id @default(autoincrement())
  businessId       Int
  business         Business? @relation(fields: [businessId], references: [businessId], onDelete: Cascade)
  firstName        String
  lastName         String
  mobile           String
  email            String
  gender           String?   @db.VarChar(100)
  pinCode          String?   @db.VarChar(30)
  address          String?
  city             String?   @db.VarChar(100)
  state            String?   @db.VarChar(100)
  country          String?   @db.VarChar(100)
  profilePhoto     String?
  isActive         Boolean   @default(true)
  status           Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime?
  deletedAt        DateTime?
  createdBy        User?     @relation("BusinessClientCreatedBy", fields: [createdById], references: [userId], onDelete: SetNull)
  updatedBy        User?     @relation("BusinessClientUpdatedBy", fields: [updatedById], references: [userId], onDelete: SetNull)
  deletedBy        User?     @relation("BusinessClientDeletedBy", fields: [deletedById], references: [userId], onDelete: SetNull)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model NotificationService {
  notificationServiceId Int                  @id @default(autoincrement())
  service               NotificationServices
  serviceType           NotificationTypes
  host                  String
  port                  String
  encryption            String
  configuration         Json?
  status                Boolean              @default(true)
  createdAt             DateTime             @default(now())
  updatedAt             DateTime?
  deletedAt             DateTime?
  createdBy             User?                @relation("NotificationServiceCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy             User?                @relation("NotificationServiceUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy             User?                @relation("NotificationServiceDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model SupportTicket {
  supportTicketId Int          @id @default(autoincrement())
  subject         String
  description     String
  userName        String?
  userEmail       String?
  userMobile      String?
  ticketStatus    TicketStatus @default(open)
  status          Boolean      @default(true)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime?
  deletedAt       DateTime?
  createdBy       User?        @relation("SupportTicketCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy       User?        @relation("SupportTicketUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy       User?        @relation("SupportTicketDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  supportTicketMedias SupportTicketMedia[]
}

model SupportTicketMedia {
  supportTicketMediaId Int            @id @default(autoincrement())
  supportTicketId      Int
  supportTicket        SupportTicket? @relation(fields: [supportTicketId], references: [supportTicketId], onDelete: Cascade)
  name                 String
  mediaType            String
  mediaUrl             String
  size                 String
  status               Boolean        @default(true)
  createdAt            DateTime       @default(now())
  updatedAt            DateTime?
  deletedAt            DateTime?
  createdBy            User?          @relation("SupportTicketMediaCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy            User?          @relation("SupportTicketMediaUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy            User?          @relation("SupportTicketMediaDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model Blog {
  blogId      Int       @id @default(autoincrement())
  title       String
  description String
  status      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
  deletedAt   DateTime?
  createdBy   User?     @relation("BlogCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy   User?     @relation("BlogUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy   User?     @relation("BlogDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  blogMedia BlogMedia[]
}

model BlogMedia {
  blogMediaId    Int       @id @default(autoincrement())
  blogId         Int
  blog           Blog?     @relation(fields: [blogId], references: [blogId], onDelete: Cascade)
  name           String
  mediaType      String
  mediaUrl       String
  size           String
  sequenceNumber Int
  status         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
  createdBy      User?     @relation("BlogMediaCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy      User?     @relation("BlogMediaUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy      User?     @relation("BlogMediaDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model Banner {
  bannerId       Int       @id @default(autoincrement())
  name           String
  mediaType      String
  mediaUrl       String
  size           String
  sequenceNumber Int
  status         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  deletedAt      DateTime?
  createdBy      User?     @relation("BannerCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy      User?     @relation("BannerUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy      User?     @relation("BannerDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?
}

model Attribute {
  attributeId  Int           @id @default(autoincrement())
  name         String
  type         AttributeType
  options      String? // JSON for SELECT/MULTI_SELECT
  unit         String? // e.g. cm, inch
  isFilterable Boolean       @default(false)
  status       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime?
  deletedAt    DateTime?
  createdById  Int?
  updatedById  Int?
  deletedById  Int?

  createdBy User? @relation("AttributeCreatedBy", fields: [createdById], references: [userId])
  updatedBy User? @relation("AttributeUpdatedBy", fields: [updatedById], references: [userId])
  deletedBy User? @relation("AttributeDeletedBy", fields: [deletedById], references: [userId])

  productAttributes ProductAttribute[]
  variantAttributes VariantAttribute[]
}

model ProductCategory {
  productCategoryId Int       @id @default(autoincrement())
  name              String
  image             String
  shortDescription  String
  description       String
  sequenceNumber    Int?
  status            Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime?
  deletedAt         DateTime?
  createdBy         User?     @relation("ProductCategoryCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy         User?     @relation("ProductCategoryUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy         User?     @relation("ProductCategoryDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  productSubCategories ProductSubCategory[]
  products             Product[]
}

model ProductSubCategory {
  productSubCategoryId Int              @id @default(autoincrement())
  productCategoryId    Int
  productCategory      ProductCategory? @relation(fields: [productCategoryId], references: [productCategoryId], onDelete: Cascade)
  name                 String
  image                String
  shortDescription     String
  description          String
  sequenceNumber       Int?
  status               Boolean          @default(true)
  createdAt            DateTime         @default(now())
  updatedAt            DateTime?
  deletedAt            DateTime?
  createdBy            User?            @relation("ProductSubCategoryCreatedBy", fields: [createdById], references: [userId], onDelete: Cascade)
  updatedBy            User?            @relation("ProductSubCategoryUpdatedBy", fields: [updatedById], references: [userId], onDelete: Cascade)
  deletedBy            User?            @relation("ProductSubCategoryDeletedBy", fields: [deletedById], references: [userId], onDelete: Cascade)

  createdById Int?
  updatedById Int?
  deletedById Int?

  products Product[]
}

model Product {
  productId            Int                @id @default(autoincrement())
  productCategoryId    Int
