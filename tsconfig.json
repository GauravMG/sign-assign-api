{
	"compilerOptions": {
		"target": "ESNext", // Keep the target as ESNext for modern JS
		"module": "CommonJS", // Change from ESNext to CommonJS
		"moduleResolution": "node", // Keep module resolution as node
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true, // Ensure compatibility for default imports
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"types": [
			"node",
			"express"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		]
	},
	"include": [
		"src/**/*.ts",
		"prisma"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}